---
// Supports weights 200-800
import "@fontsource-variable/plus-jakarta-sans";
import SEO from "../components/SEO.astro";

interface Props {
  title: string;
  description: string;
  keywords: string;
  canonical: string;
  robots: string;
  img: string;
}

const { title, description, keywords, canonical, robots, img } = Astro.props;
---

<!doctype html>
<html lang="es" id="smooth-wrapper">
  <head>
    <meta name="theme-color" content="#202020" />
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      canonical={canonical}
      robots={robots}
      img={img}
    />
  </head>
  <body>
    <slot />
    <style is:global>
      .page-width,
      .page-wide,
      .full-page {
        @apply px-3;
      }

      .page-width {
        @apply max-w-desktop mx-auto; /** 1024px */
      }

      .page-wide {
        @apply max-w-wide ms-12 md:mx-auto; /** 1280px */
      }

      .page-width.cols {
        --desktop: theme(spacing.desktop);
      }

      .page-wide.cols {
        --desktop: theme(spacing.wide);
      }

      .hero .cols,
      .icon-section .cols {
        --gap: theme(spacing.10);
      }

      .icon-section .cols {
        --desktop: calc(
          theme(spacing.desktop) - theme(spacing.3) - theme(spacing.10)
        );
      }

      .cols {
        --gap: theme(spacing.1);

        @apply grid;
        grid-template-columns: repeat(
          auto-fit,
          minmax(
            min(
              100%,
              calc(
                (
                    var(--desktop) - (theme(spacing.3) * 2) -
                      (var(--gap) * (var(--cols) - 1))
                  ) / var(--cols)
              )
            ),
            1fr
          )
        );
        gap: var(--gap);
      }

      .cols[data-cols="2"] {
        --cols: 2;
      }

      .cols[data-cols="3"] {
        --cols: 3;
      }

      .cols[data-cols="4"] {
        --cols: 4;
      }
    </style>
  </body>
</html>
